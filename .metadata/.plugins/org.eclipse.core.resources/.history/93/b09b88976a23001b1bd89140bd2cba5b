package mouseChallange;

public class mouse {

	public static void main(String []args)
	{
       String output="";
       int[] array = new int[21];
       
       for(int i=0;i<21;i++) {
    	   array[i]=1;
       }
       
       int i=0;
       
       while(i>=0 && i<=21) {
    	   
    	   if(i==0)
    	   {
    		   for(int j=0;j<21;j++) {
    		    	 output=array[j]+" "+output;
    		       } 
    	   }
    	   else
    	   {
    		     int[] array1 = new int[21-i];
    		     		     		     
    		   for(int k=i-1;k<21-i;k++) {
    			   
    			   for(int v=0;v<21-i;v++) {
    				   
    				   if(v==k)
    				   {
    						  array1[v]=2;
    	    				  
    				   }
    				   
    				   else
    				   {
    					   array1[v]=1;    					  
     	   		    	 
    				   }  

    	   		    	}

    			   if(i==2)
    			   {  
    				   
    	   		    		array1[20-i]=2;
    	   		    		if(array1[20-i]==2 || array1[0]==1) {
    	   		    			array[0]=2;
    	   		    		}
    	   		    		
    	   		    	
    			   }
    			   if(i==3)
    			   {  
    				   		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    			   }
    			   if(i==4)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
   		    	
    			   }
    			   if(i==5)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	

    	   		    		array1[17-i]=2;
   		    	
    			   }
    			   if(i==6)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
    	   		    		array1[17-i]=2;	

    	   		    		array1[16-i]=2;	
   		    	
    			   }
    			   if(i==7)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
    	   		    		array1[17-i]=2;	

    	   		    		array1[16-i]=2;	
    	   		    		array1[15-i]=2;	

   		    	
    			   }
    			   if(i==8)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
    	   		    		array1[17-i]=2;	

    	   		    		array1[16-i]=2;	
    	   		    		array1[15-i]=2;	

    	   		    		array1[14-i]=2;	

    	   		    		array1[13-i]=2;	
   		    	
    			   }
    			   if(i==9)
    			   {  

    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
    	   		    		array1[17-i]=2;	

    	   		    		array1[16-i]=2;	
    	   		    		array1[15-i]=2;	

    	   		    		array1[14-i]=2;	

    	   		    		array1[13-i]=2;	

    	   		    		array1[12-i]=2;	

    			   }
    			   if(i==10)
    			   {  
    	   		    		array1[20-i]=2;
    	   		    		array1[19-i]=2;	
    	   		    		array1[18-i]=2;	
    	   		    		array1[17-i]=2;	

    	   		    		array1[16-i]=2;	
    	   		    		array1[15-i]=2;	

    	   		    		array1[14-i]=2;	

    	   		    		array1[13-i]=2;	

    	   		    		array1[12-i]=2;	

    	   		    		array1[11-i]=2;	
   		    	
    			   }




    			   	for(int c=0;c<21-i;c++) {
   		    		
   		    				output=array1[c]+" "+output;
   		    				
   		    	}
                 
    			   	
   		     output="\n"+output;
   		  
   		 
   		    }
    	   }
    	   output="\n"+output;
    	   i++;
       }
       
       System.out.println("results: "+output);	
	}
}
